<div class="container">

  {{!-- Title --}}
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Eat Da Burger!</h1>
    </div>
  </div>

  {{!-- Burger Image --}}
  <div class="row">
    <div class="col-md-12 text-center">
      <img class="img-fluid" src="/public/assets/images/burger.png">
    </div>
  </div>

  <div class="row">
    {{!-- Not Devoured --}}
    <div class="col-md-4">
      <h2>Not Devoured</h2>
      <ul>
        {{#each burger}}
        {{#unless this.devoured}}
        <li>{{this.id}}.{{this.burger_name}}</li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    {{!-- Form --}}
    <div class="col-md-4">
      <form>
        <input type="text" name="burger">
        <input type="submit" value="Submit">
      </form>
    </div>
    {{!-- Devoured --}}
    <div class="col-md-4">
      <h2>Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>{{this.id}}.{{this.burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>